<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="coverd_money.twig.money.class">Coverd\MoneyBundle\Twig\Extension\MoneyExtension</parameter>
        <parameter key="coverd_money.twig.currency.class">Coverd\MoneyBundle\Twig\Extension\CurrencyExtension</parameter>
    </parameters>

    <services>
        <service id="coverd_money.twig.money" class="%coverd_money.twig.money.class%" public="true">
            <argument type="service" id="coverd_money.formatter.money_formatter"/>
            <tag name="twig.extension" />
        </service>
        <service id="coverd_money.twig.currency" class="%coverd_money.twig.currency.class%" public="true">
            <argument type="service" id="coverd_money.formatter.money_formatter"/>
            <tag name="twig.extension" />
        </service>
    </services>

</container>
