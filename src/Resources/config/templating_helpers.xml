<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="coverd_money.templating.helper.money.class">Coverd\MoneyBundle\Templating\Helper\MoneyHelper</parameter>
        <parameter key="coverd_money.templating.helper.currency.class">Coverd\MoneyBundle\Templating\Helper\CurrencyHelper</parameter>
    </parameters>

    <services>
        <service id="coverd_money.templating.helper.money" class="%coverd_money.templating.helper.money.class%">
            <argument type="service" id="coverd_money.formatter.money_formatter"/>
            <tag name="templating.helper" alias="coverd_money" />
        </service>
        <service id="coverd_money.templating.helper.currency" class="%coverd_money.templating.helper.currency.class%">
            <argument type="service" id="coverd_money.formatter.money_formatter"/>
            <tag name="templating.helper" alias="coverd_money_currency" />
        </service>
    </services>

</container>
